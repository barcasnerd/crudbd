<% include partials/_header %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <td>ID</td>
                        <td>Nombre</td>
                        <td>Identificación del padre</td>
                        <td>Opciones</td>
                    </thead>
                    <tbody>
                        <% if (data) { %>
                            <% for(var i = 0; i < data.length; i++) { %>
                                <tr>
                                    <td>
                                        <%= data[i].id %>
                                    </td>
                                    <td>
                                        <%= data[i].nom %>
                                    </td>
                                    <td>
                                        <%= data[i].hijode %>
                                    </td>
                                    <td>
                                        <a href="/hijo/update/<%= data[i].id %>" class="btn btn-info">Editar</a>
                                        <a href="/hijo/delete/<%= data[i].id %>" class="btn btn-danger">Borrar</a>
                                    </td>
                                </tr>
                                <% } %>
                                    <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-md-5">
                <div class="card-body">
                    <form action="/hijo/add" method="POST">
                        <div class="form-group">
                            <input type="number" name="id" placeholder="Identificación" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="nom" placeholder="Nombre completo" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="number" name="hijode" placeholder="Identificacion del padre (vacío sino tiene)" class="form-control" autofocus>
                        </div>
                        <button type="submit" class="btn btn-success">
                            Agregar hijo
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <% include partials/_footer %>