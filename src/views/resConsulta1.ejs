<% include partials/_header %>

    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <table class="table table-bordered table-hover">
                    <thead>
                        <td>ID</td>
                        <td>Nombre</td>
                        <td>Identificaci√≥n del padre</td>
                        <td>Opciones</td>
                    </thead>
                    <tbody>
                        <% if (data) { %>
                            <% for(var i=0; i < data.length; i++) { %>
                                <tr>
                                    <td>
                                        <%= data[i].id %>
                                    </td>
                                    <td>
                                        <%= data[i].nom %>
                                    </td>
                                    <td>
                                        <% if (data[i].hijode == null) { %>
                                        <p>No registra</p>
                                        <% } else { %>
                                        <%= data[i].hijode %>
                                        <% } %>
                                    </td>
                                    <td>
                                        <a href="/hijo/update/<%= data[i].id %>" class="btn btn-info">Editar</a>
                                        <a href="/hijo/delete/<%= data[i].id %>" class="btn btn-danger">Borrar</a>
                                    </td>
                                </tr>
                                <% } %>
                                    <% } %>
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <% include partials/_footer %>